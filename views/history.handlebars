<!doctype html>

<html>
<head>
	<title>History</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/app_style.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		{{#each avatar}}
			<div onclick="openNav()">
				<img src="{{image}}" alt="Avatar" class="img" height="30" width="30">
			</div>
			<div class="top_title" align="center">
				<div class="app_title">
					<h1>HISTORY</h1>
					<p></p>
				</div>
			</div>

			<div id="{{id}}" class="{{class}}">
  				<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
					<a href=".">Home</a>
  				<a href="profile">Profile</a>
  				<a href="history">History</a>
					<a href="tips">Stress Relief Tips</a>  
					<a href="login">Logout</a>
			</div>
		{{/each}}
			{{#each history}}
				<div class="text-center" style="border: 3px solid black">
					<h2 style="color:green; margin: auto">{{option1}}</h2>
					<p>over</p>
					<h2 style="color:red; margin: auto">{{option2}}</h2>
				</div>
			{{/each}}
			<div>
				<form id="resetHistoryForm" role="form" method="get" action="/resetHistory" style="float: right; padding-top: 10%">
					<input type="submit" class="btn btn-dark" id="reset_history" value="Clear History">
				</form>
			</div>
		</div>
	<script>
		$(document).ready(function() {
    	openNav();
    	closeNav();
		});

	function openNav() {
    	document.getElementById("avatar").style.width = "250px";
	};
  
	function closeNav() {
			document.getElementById("avatar").style.width = "0";
	};	
	</script>
</body>
</html>