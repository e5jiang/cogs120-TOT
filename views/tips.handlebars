		$(document).ready(function() {
    	openNav();
    	closeNav();
		});

		function openNav() {
				document.getElementById("avatar").style.width = "250px";
		};
		
		function closeNav() {
				document.getElementById("avatar").style.width = "0";
		};	
	</script>
